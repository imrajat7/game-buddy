<%- include("partials/header") -%>



<div class="container-details">
    <div style="text-align: center;">
        <img class="d-block mx-auto mb-4" src="/images/card.png" alt="logo" width="100" height="100">
        <h2>Enter Details</h2>
    </div>



    <div class="col-md-8 order-md-1">

        <form class="needs-validation" method="POST" action="/user/moreDetails">

            <div class="col-md-6 mb-3">
                <label for="Name">Name</label>
                <input type="text" class="form-control" id="Name" placeholder="Name" name="name" required>
                <div class="invalid-feedback">
                    Valid Name is required.
                </div>
            </div>



            <div class="col-md-6 mb-3">
                <label for="username">Pubg Username</label>
                <div class="input-group">

                    <input type="text" class="form-control" id="username" name="pubgUsername" placeholder="Username" required>
                    <div class="invalid-feedback" style="width: 100%;">
                        Your username is required.
                    </div>
                </div>
            </div>


            <div class="col-md-6 mb-3">
                <label for="">Referral Code (if any)</label>
                <input type="text" class="form-control" name="referral" placeholder="Referral Code">
                <div class="invalid-feedback">
                    Enter Referral code (if any)
                </div>
            </div>

            <hr class="col-md-6 mb-3">
            <input type="submit" class="btn btn-dark btn-lg" value="Complete Profile">
        </form>



    </div>

    <br><br><br>



</div>
